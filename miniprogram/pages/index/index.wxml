
<header> </header>
<view wx:if="{{!showLoginPage}}">
  <clockOut wx:if="{{currentPage=='clockOut'}}" bind:search='searchHandler'></clockOut>
  <grid  wx:if="{{currentPage=='grid'}}"/>
  <login bind:login="loginHandler" bind:register='registerHandler'  wx:if="{{currentPage=='login'}}"/>
  <register bind:back="backHandler" bind:registerPageHandler="registerPageHandler" wx:if="{{currentPage=='register'}}"/>
  <search bind:showResult='showResultHandler' bind:back='backhomeHandler'  wx:if="{{currentPage=='search'}}"/>
  <result dataSource="{{searchData}}" bind:back='backGridHandler' wx:if="{{currentPage=='result'}}"/>
</view>
<view wx-if="{{showLoginPage}}">
  <!-- 如果只是展示用户头像昵称，可以使用 <open-data /> 组件 -->
  <open-data type="userAvatarUrl"></open-data>
  <!-- <open-data type="userNickName"></open-data> -->
  <!-- 需要使用 button 来授权登录 -->
  <button wx:if="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权登录</button>
  <view wx:else>请升级微信版本</view>
</view>
<footer></footer>